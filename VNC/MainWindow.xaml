<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="VNC.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VNC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Title="VNC">

    <!--<Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>-->

    <!-- Root layout -->
    <Grid x:Name="RootGridLayout">
        <!-- Rows: header + content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Columns: transparent area + LLM panel -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="TransparentColumn" Width="3*" />
            <ColumnDefinition x:Name="SplitterColumn" Width="5" />
            <ColumnDefinition x:Name="LlmColumn" Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- Header / control area -->
        <StackPanel x:Name="ControlPanel"
                    Grid.Row="0"
                    Grid.ColumnSpan="3"
                    Margin="20,20,20,0"
                    Spacing="0">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="VNCompanion"
                           Style="{ThemeResource TitleTextBlockStyle}"
                           VerticalAlignment="Center" />
                <TextBlock x:Name="StatusText"
                           Text="Ready for translation."
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,13,0,0" />
            </StackPanel>

            <!-- Controls -->
            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                <Button x:Name="LlmAnalysisButton"
                        Content="Translate"
                        Click="LlmAnalysisButton_Click"
                        IsEnabled="True"
                        Padding="15,8" />
                <Button x:Name="SettingsButton"
                        Content="âš™"
                        Click="SettingsButton_Click"
                        Padding="8"
                        ToolTipService.ToolTip="Open Settings" />
            </StackPanel>
        </StackPanel>

        <!-- Completely transparent SwapChainPanel for DirectX rendering -->
        <SwapChainPanel x:Name="swapChainPanel1" 
                        Grid.Row="1" 
                        Grid.Column="0" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch" 
                        Margin="20,20,20,20">
            <Border x:Name="mainBorder" 
                    BorderThickness="3" 
                    BorderBrush="Red" 
                    Background="Transparent">
                <TextBlock Text="DirectX Capture Area" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" />
            </Border>
        </SwapChainPanel>

        <!-- Splitter -->
        <Border x:Name="SplitterBorder"
                Grid.Row="1"
                Grid.Column="1"
                Background="{ThemeResource SystemControlForegroundBaseLowBrush}"
                Width="1"
                Margin="0" />

        <!-- LLM Analysis Results Panel -->
        <Grid x:Name="LlmPanel"
              Grid.Row="1"
              Grid.Column="2"
              Margin="20,20,20,20"
              Visibility="Visible"
              HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
                <TextBlock Text="Translation"
                           Style="{ThemeResource SubtitleTextBlockStyle}" />
            </StackPanel>

            <!-- Main content with TabView -->
            <TabView Grid.Row="1" x:Name="MainTabView">
                <!-- Translation Tab -->
                <TabViewItem Header="Translation" x:Name="TranslationTab" IsClosable="False">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Translation Text -->
                        <ScrollViewer Grid.Row="0"
                                      VerticalScrollBarVisibility="Visible"
                                      HorizontalScrollBarVisibility="Auto">
                            <TextBox x:Name="LlmResultTextBox"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     PlaceholderText="LLM analysis results will appear here after clicking 'Analyze with LLM'"
                                     Height="200"
                                     Width="440"
                                     HorizontalAlignment="Stretch"
                                     Background="{ThemeResource LayerFillColorDefaultBrush}"
                                     BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     FontFamily="Yu Gothic UI, Meiryo UI, Segoe UI, Tahoma"
                                     FontSize="14" />
                        </ScrollViewer>

                        <!-- Separator -->
                        <TextBlock Grid.Row="1"
                                   Text="Vocabulary"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   FontWeight="SemiBold"
                                   Margin="0,10,0,5"
                                   FontSize="20"
                                   x:Name="WordDefinitionsHeader"
                                   Visibility="Collapsed" />

                        <!-- Word Definitions Table -->
                        <Border Grid.Row="2"
                                x:Name="WordTableScrollViewer"
                                Visibility="Collapsed"
                                BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                BorderThickness="1"
                                Background="{ThemeResource LayerFillColorDefaultBrush}">
                            <controls:DataGrid x:Name="WordDefinitionsDataGrid"
                                               AutoGenerateColumns="False"
                                               GridLinesVisibility="Horizontal"
                                               HeadersVisibility="Column"
                                               IsReadOnly="True"
                                               VerticalScrollBarVisibility="Auto"
                                               HorizontalScrollBarVisibility="Auto"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               FontFamily="Yu Gothic UI, Meiryo UI, Segoe UI, Tahoma"
                                               FontSize="13">
                                <controls:DataGrid.Columns>
                                    <controls:DataGridTextColumn Header="Word" MaxWidth="140" Binding="{Binding Word}" Width="*" />
                                    <controls:DataGridTextColumn Header="Pronunciation" MaxWidth="140" Binding="{Binding Pronunciation}" Width="*" />
                                    <controls:DataGridTextColumn Header="Translation" MaxWidth="150" Binding="{Binding Translation}" Width="2*" />
                                </controls:DataGrid.Columns>
                            </controls:DataGrid>
                        </Border>
                    </Grid>
                </TabViewItem>

                <!-- Log Tab -->
                <TabViewItem Header="Log" x:Name="LogTab" IsClosable="False">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Export Buttons -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="10">
                            <Button x:Name="ExportCsvButton"
                                    Content="Export to CSV"
                                    Click="ExportCsvButton_Click"
                                    Padding="15,8" />
                            <Button x:Name="ExportAnkiButton"
                                    Content="Export to Anki"
                                    Click="ExportAnkiButton_Click"
                                    Padding="15,8" />
                        </StackPanel>

                        <Border Grid.Row="1"
                                BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                BorderThickness="1"
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                Margin="10,0,10,10">
                            <controls:DataGrid x:Name="LogDataGrid"
                                               AutoGenerateColumns="False"
                                               GridLinesVisibility="Horizontal"
                                               HeadersVisibility="Column"
                                               IsReadOnly="True"
                                               VerticalScrollBarVisibility="Auto"
                                               HorizontalScrollBarVisibility="Auto"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               FontFamily="Yu Gothic UI, Meiryo UI, Segoe UI, Tahoma"
                                               FontSize="13"
                                               CanUserSortColumns="True"
                                               Sorting="LogDataGrid_Sorting"
                                               DoubleTapped="LogDataGrid_DoubleTapped">
                                <controls:DataGrid.Columns>
                                    <controls:DataGridTextColumn Header="Word" MaxWidth="140" Binding="{Binding Word}" Width="*" CanUserSort="True" />
                                    <controls:DataGridTextColumn Header="Pronunciation" MaxWidth="140" Binding="{Binding Pronunciation}" Width="*" CanUserSort="True" />
                                    <controls:DataGridTextColumn Header="Meaning" MaxWidth="150" Binding="{Binding Meaning}" Width="2*" CanUserSort="True" />
                                    <controls:DataGridTextColumn Header="Frequency" MaxWidth="80" Binding="{Binding Frequency}" Width="60" CanUserSort="True" />
                                </controls:DataGrid.Columns>
                            </controls:DataGrid>
                        </Border>
                    </Grid>
                </TabViewItem>

            </TabView>
        </Grid>
    </Grid>
</Window>
