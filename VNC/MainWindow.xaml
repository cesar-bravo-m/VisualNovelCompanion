<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="VNC.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VNC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Title="VNC">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <!-- Root layout -->
    <Grid x:Name="RootGridLayout">
        <!-- Visual states drive the collapsed/expanded layout -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="LayoutStates">
                <!-- Default 3-pane layout -->
                <VisualState x:Name="Expanded">
                    <VisualState.Setters>
                        <Setter Target="ScreenshotScrollViewer.Visibility" Value="Visible"/>
                        <Setter Target="SplitterBorder.Visibility" Value="Collapsed"/>
                        <Setter Target="LlmPanel.(Grid.Column)" Value="2"/>
                        <Setter Target="LlmPanel.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="LlmPanel.HorizontalAlignment" Value="Stretch"/>
                        <Setter Target="LlmPanel.Width" Value="Auto"/>
                        <Setter Target="ExpandButton.Visibility" Value="Collapsed"/>
                        <Setter Target="CollapseButton.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Left-aligned single-pane LLM layout -->
                <VisualState x:Name="Collapsed">
                    <VisualState.Setters>
                        <Setter Target="ScreenshotScrollViewer.Visibility" Value="Collapsed"/>
                        <Setter Target="SplitterBorder.Visibility" Value="Collapsed"/>
                        <Setter Target="LlmPanel.(Grid.Column)" Value="0"/>
                        <Setter Target="LlmPanel.(Grid.ColumnSpan)" Value="3"/>
                        <Setter Target="LlmPanel.HorizontalAlignment" Value="Stretch"/>
                        <!-- Force Auto width so any inner Width you add won't reserve right-side space -->
                        <Setter Target="LlmPanel.Width" Value="Auto"/>
                        <Setter Target="ExpandButton.Visibility" Value="Visible"/>
                        <Setter Target="CollapseButton.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!-- Rows: header + content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Columns for expanded mode -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="ScreenshotColumn" Width="3*" />
            <ColumnDefinition x:Name="SplitterColumn" Width="5" />
            <ColumnDefinition x:Name="LlmColumn" Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- Header / control area (tight to content below) -->
        <StackPanel x:Name="ControlPanel"
                    Grid.Row="0"
                    Grid.ColumnSpan="3"
                    Margin="20,20,20,0"
                    Spacing="0">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="VNCompanion"
                           Style="{ThemeResource TitleTextBlockStyle}"
                           VerticalAlignment="Center" />
                <TextBlock x:Name="StatusText"
                           Text="Click the refresh button to load available windows, then select one to start capture automatically."
                           TextWrapping="Wrap"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,13,0,0" />
            </StackPanel>

            <!-- Collapsible Content -->
            <StackPanel x:Name="CollapsibleContent">
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                    <TextBlock x:Name="SelectWindowTextBlock" Text="Select Window:" VerticalAlignment="Center" Margin="0,1,5,0" />
                    <ComboBox x:Name="WindowsComboBox"
                              DisplayMemberPath="Title"
                              SelectionChanged="WindowsComboBox_SelectionChanged"
                              PlaceholderText="Choose a window..."
                              Margin="0,3,0,0"
                              MinWidth="100"
                              MaxWidth="400" />
                    <Button x:Name="RefreshWindowsButton"
                            Content="↻"
                            Click="RefreshWindowsButton_Click"
                            Padding="8"
                            ToolTipService.ToolTip="Refresh window list" />
                    <Button x:Name="StopCaptureButton"
                            Content="Stop Capture"
                            Click="StopCaptureButton_Click"
                            IsEnabled="False"
                            Padding="15,8"
                            Visibility="Collapsed" />
                    <Button x:Name="LlmAnalysisButton"
                            Content="Translate"
                            Click="LlmAnalysisButton_Click"
                            IsEnabled="False"
                            Padding="15,8" />
                    <Button x:Name="SettingsButton"
                            Content="⚙"
                            Click="SettingsButton_Click"
                            Padding="8"
                            ToolTipService.ToolTip="Open Settings" />
                    <!--<Button x:Name="NextButton"
                            Content="Next"
                            Click="NextButton_Click"
                            IsEnabled="False"
                            Padding="15,8" />-->
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Screenshot Display (left area) -->
        <ScrollViewer x:Name="ScreenshotScrollViewer"
                      Grid.Row="1"
                      Grid.Column="0"
                      ZoomMode="Enabled"
                      HorizontalScrollMode="Auto"
                      VerticalScrollMode="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Margin="20,0,20,20">
            <Grid x:Name="ImageContainer">
                <Image x:Name="ScreenshotImage"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Stretch="Uniform" />
                <Canvas x:Name="SelectionCanvas"
                        Background="Transparent"
                        PointerPressed="SelectionCanvas_PointerPressed"
                        PointerMoved="SelectionCanvas_PointerMoved"
                        PointerReleased="SelectionCanvas_PointerReleased">
                    <Rectangle x:Name="SelectionRectangle"
                               Stroke="Red"
                               StrokeThickness="2"
                               Fill="Transparent"
                               Visibility="Collapsed"
                               Canvas.Left="0"
                               Canvas.Top="0"
                               Width="100"
                               Height="100" />
                    <Ellipse x:Name="TopLeftHandle" Fill="Red" Width="10" Height="10" Visibility="Collapsed" PointerPressed="Handle_PointerPressed" Tag="TopLeft" />
                    <Ellipse x:Name="TopRightHandle" Fill="Red" Width="10" Height="10" Visibility="Collapsed" PointerPressed="Handle_PointerPressed" Tag="TopRight" />
                    <Ellipse x:Name="BottomLeftHandle" Fill="Red" Width="10" Height="10" Visibility="Collapsed" PointerPressed="Handle_PointerPressed" Tag="BottomLeft" />
                    <Ellipse x:Name="BottomRightHandle" Fill="Red" Width="10" Height="10" Visibility="Collapsed" PointerPressed="Handle_PointerPressed" Tag="BottomRight" />
                </Canvas>
            </Grid>
        </ScrollViewer>

        <!-- Splitter -->
        <Border x:Name="SplitterBorder"
                Grid.Row="1"
                Grid.Column="1"
                Background="{ThemeResource SystemControlForegroundBaseLowBrush}"
                Width="1"
                Visibility="Collapsed"
                Margin="0" />

        <!-- LLM Analysis Results Panel -->
        <Grid x:Name="LlmPanel"
              Grid.Row="1"
              Grid.Column="2"
              Margin="20,0,20,20"
              Visibility="Collapsed"
              HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header with toggle buttons -->
            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,10">
                <!-- Collapse to single-pane -->
                <Button x:Name="CollapseButton"
                        Content="◀"
                        Click="CollapseButton_Click"
                        Padding="8,4"
                        ToolTipService.ToolTip="Collapse to single-pane LLM view" />
                <!-- Expand back to 3-pane -->
                <Button x:Name="ExpandButton"
                        Content="▶"
                        Click="ExpandButton_Click"
                        Visibility="Collapsed"
                        Padding="8,4"
                        ToolTipService.ToolTip="Expand to 3-pane view" />
                <TextBlock Text="Translation"
                           Style="{ThemeResource SubtitleTextBlockStyle}" />
            </StackPanel>

            <!-- Main content with TabView -->
            <TabView Grid.Row="1" x:Name="MainTabView">
                <!-- Translation Tab -->
                <TabViewItem Header="Translation" x:Name="TranslationTab" IsClosable="False">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Translation Text -->
                        <ScrollViewer Grid.Row="0"
                                      VerticalScrollBarVisibility="Visible"
                                      HorizontalScrollBarVisibility="Auto">
                            <TextBox x:Name="LlmResultTextBox"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     PlaceholderText="LLM analysis results will appear here after clicking 'Analyze with LLM'"
                                     Height="200"
                                     Width="440"
                                     HorizontalAlignment="Stretch"
                                     Background="{ThemeResource LayerFillColorDefaultBrush}"
                                     BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     FontFamily="Yu Gothic UI, Meiryo UI, Segoe UI, Tahoma"
                                     FontSize="14" />
                        </ScrollViewer>

                        <!-- Separator -->
                        <TextBlock Grid.Row="1"
                                   Text="Vocabulary"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   FontWeight="SemiBold"
                                   Margin="0,10,0,5"
                                   FontSize="20"
                                   x:Name="WordDefinitionsHeader"
                                   Visibility="Collapsed" />

                        <!-- Word Definitions Table -->
                        <Border Grid.Row="2"
                                x:Name="WordTableScrollViewer"
                                Visibility="Collapsed"
                                BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                BorderThickness="1"
                                Background="{ThemeResource LayerFillColorDefaultBrush}">
                            <controls:DataGrid x:Name="WordDefinitionsDataGrid"
                                               AutoGenerateColumns="False"
                                               GridLinesVisibility="Horizontal"
                                               HeadersVisibility="Column"
                                               IsReadOnly="True"
                                               VerticalScrollBarVisibility="Auto"
                                               HorizontalScrollBarVisibility="Auto"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               FontFamily="Yu Gothic UI, Meiryo UI, Segoe UI, Tahoma"
                                               FontSize="13">
                                <controls:DataGrid.Columns>
                                    <controls:DataGridTextColumn Header="Word" MaxWidth="140" Binding="{Binding Word}" Width="*" />
                                    <controls:DataGridTextColumn Header="Pronunciation" MaxWidth="140" Binding="{Binding Pronunciation}" Width="*" />
                                    <controls:DataGridTextColumn Header="Translation" MaxWidth="150" Binding="{Binding Translation}" Width="2*" />
                                </controls:DataGrid.Columns>
                            </controls:DataGrid>
                        </Border>
                    </Grid>
                </TabViewItem>

                <!-- Log Tab -->
                <TabViewItem Header="Log" x:Name="LogTab" IsClosable="False">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Export Buttons -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="10">
                            <Button x:Name="ExportCsvButton"
                                    Content="Export to CSV"
                                    Click="ExportCsvButton_Click"
                                    Padding="15,8" />
                            <Button x:Name="ExportAnkiButton"
                                    Content="Export to Anki"
                                    Click="ExportAnkiButton_Click"
                                    Padding="15,8" />
                        </StackPanel>

                        <Border Grid.Row="1"
                                BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                BorderThickness="1"
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                Margin="10,0,10,10">
                            <controls:DataGrid x:Name="LogDataGrid"
                                               AutoGenerateColumns="False"
                                               GridLinesVisibility="Horizontal"
                                               HeadersVisibility="Column"
                                               IsReadOnly="True"
                                               VerticalScrollBarVisibility="Auto"
                                               HorizontalScrollBarVisibility="Auto"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               FontFamily="Yu Gothic UI, Meiryo UI, Segoe UI, Tahoma"
                                               FontSize="13"
                                               CanUserSortColumns="True"
                                               Sorting="LogDataGrid_Sorting"
                                               DoubleTapped="LogDataGrid_DoubleTapped">
                                <controls:DataGrid.Columns>
                                    <controls:DataGridTextColumn Header="Word" MaxWidth="140" Binding="{Binding Word}" Width="*" CanUserSort="True" />
                                    <controls:DataGridTextColumn Header="Pronunciation" MaxWidth="140" Binding="{Binding Pronunciation}" Width="*" CanUserSort="True" />
                                    <controls:DataGridTextColumn Header="Meaning" MaxWidth="150" Binding="{Binding Meaning}" Width="2*" CanUserSort="True" />
                                    <controls:DataGridTextColumn Header="Frequency" MaxWidth="80" Binding="{Binding Frequency}" Width="60" CanUserSort="True" />
                                </controls:DataGrid.Columns>
                            </controls:DataGrid>
                        </Border>
                    </Grid>
                </TabViewItem>

            </TabView>
        </Grid>
    </Grid>
</Window>
